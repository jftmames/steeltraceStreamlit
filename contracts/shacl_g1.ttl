@prefix sh:  <http://www.w3.org/ns/shacl#> .
@prefix ex:  <http://example.com/esrs#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .

ex:G1RecordShape a sh:NodeShape ;
  sh:targetClass ex:G1Record ;

  sh:property [ sh:path ex:companyId ; sh:datatype xsd:string ; sh:minCount 1 ] ;
  sh:property [ sh:path ex:period ; sh:datatype xsd:string ; sh:pattern "^[0-9]{4}-[0-9]{2}$" ; sh:minCount 1 ] ;
  sh:property [ sh:path ex:casesOpened ; sh:datatype xsd:integer ; sh:minInclusive 0 ; sh:minCount 1 ] ;
  sh:property [ sh:path ex:casesClosed ; sh:datatype xsd:integer ; sh:minInclusive 0 ; sh:minCount 1 ] ;
  sh:property [ sh:path ex:closedWithResolution ; sh:datatype xsd:integer ; sh:minInclusive 0 ; sh:minCount 1 ] ;
  sh:property [ sh:path ex:hasEvidence ; sh:minCount 1 ] .
